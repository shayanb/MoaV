# Psiphon Conduit - Donate bandwidth to help others bypass censorship
# https://github.com/Psiphon-Inc/conduit
FROM debian:bookworm-slim

ARG TARGETARCH
ARG CONDUIT_VERSION=release-cli-1.0.0

RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    curl \
    geoip-bin \
    geoip-database \
    tcpdump \
    iproute2 \
    procps \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Download the conduit binary from official Psiphon-Inc repo
RUN curl -L -o conduit "https://github.com/Psiphon-Inc/conduit/releases/download/${CONDUIT_VERSION}/conduit-linux-${TARGETARCH}" && \
    chmod +x conduit

# Create data directory for conduit state
RUN mkdir -p /data /state

EXPOSE 8080

# Copy scripts
COPY scripts/conduit-entrypoint.sh /entrypoint.sh
COPY scripts/conduit-stats-collector.sh /usr/local/bin/conduit-stats
RUN chmod +x /entrypoint.sh /usr/local/bin/conduit-stats

ENTRYPOINT ["/entrypoint.sh"]
